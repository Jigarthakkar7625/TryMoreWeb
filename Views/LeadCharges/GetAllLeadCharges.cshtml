@model List<TryMoreWeb.Models.LeadChargeModel>

@{
    ViewBag.Title = "GetAllLeadCharges";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="page-header">
            <h2 class="pageheader-title">Lead Charges</h2>

        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- end pageheader -->
<!-- ============================================================== -->
<div class="row">

    <!-- ============================================================== -->
    <!-- basic table  -->
    <!-- ============================================================== -->
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <div class="card-header" style="text-align:right;">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 ">
                    <a class="btn btn-primary" href="@Url.Action("LeadCharges","LeadCharges")">Add New Lead Charges </a>
                    @*<button class="btn btn-primary" onclick="@Url.Action("SMSPlan","SMSPlan")" type="submit">Add New Plan  </button>*@
                </div>
            </div>
            @*<h5 class="card-header">Basic Table</h5>*@
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first">
                        <thead>
                            <tr>
                                <th>Product Amount</th>
                                <th>LeadCharges</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int index = 1;}
                            @if (Model.Count > 0)
                            {
                                foreach (var items in Model)
                                {
                                    <tr>
                                        <td>@items.LeadProductAmountName</td>
                                        <td>@items.LeadCharges</td>
                                        
                                        <td><a class="btn btn-primary" href="@Url.Action("LeadCharges","LeadCharges",new { LeadChargesID = items.LeadChargesID })">Edit </a></td>
                                    </tr>
                                }
                            }
                        </tbody>
                        @*<tfoot>
                                <tr>
                                    <th>Name</th>
                                    <th>Position</th>
                                    <th>Office</th>
                                    <th>Age</th>
                                    <th>Start date</th>
                                    <th>Salary</th>
                                </tr>
                            </tfoot>*@
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end basic table  -->
    <!-- ============================================================== -->
</div>


<script type="text/javascript">
    $(document).ready(function () {
                if ('@TempData["success"]' == "True") {
                    bootoast.toast({
                        message: '@TempData["message"]',
                        type: 'success',
                        position: 'right-top',
                    });
                }
                else if ('@TempData["success"]' == "False") {
                    bootoast.toast({
                        message: '@TempData["message"]',
                        type: 'danger',
                        position: 'right-top',
                    });
                }

            });
</script>

